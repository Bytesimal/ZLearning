<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.RoBroTech.Dev.HappyBirthday.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/dada" />

    <TextView
        android:id="@+id/happy_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/grey_hairs"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-black"
        android:padding="16dp"
        android:text="Happy Birthday Dada!"
        android:textColor="@android:color/black"
        android:textSize="56sp" />

    <TextView
        android:id="@+id/grey_hairs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/from_appu"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:padding="16dp"
        android:text="For many more years and grey hairs to come!"
        android:textColor="@android:color/black"
        android:textSize="40sp" />

